<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">

    <servlet>
        <servlet-name>validator</servlet-name>
        <servlet-class>auth_system.Validator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validator</servlet-name>
        <url-pattern>/validate_user</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>authorizator</servlet-name>
        <servlet-class>auth_system.Authorizator</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorizator</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>certificates</servlet-name>
        <servlet-class>UI.certificates</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>certificates</servlet-name>
        <url-pattern>/certificates</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restorePass</servlet-name>
        <servlet-class>UI.restorePass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>restorePass</servlet-name>
        <url-pattern>/restorePass</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>webinar</servlet-name>
        <servlet-class>UI.webinar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>webinar</servlet-name>
        <url-pattern>/webinar</url-pattern>
    </servlet-mapping>


    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.request.charset</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
         
</web-app>

